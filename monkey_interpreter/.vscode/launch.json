        "version": "0.2.0",
        "configurations": [
                {
                        "name": "Debug tests",
                        "type": "cppdbg",
                        "request": "launch",
                        "program": "${workspaceRoot}/tests.o",
                        "args": [],
                        "cwd": "${workspaceRoot}",
                        "environment": [],
                        "externalConsole": false,
                        "stopAtEntry": false,
                        "MIMode": "gdb",
                        "preLaunchTask": "build tests",
                        "setupCommands": [
                                {
                                        "description": "Enable pretty-printing for gdb",
                                        "text": "-enable-pretty-printing",
                                        "ignoreFailures": true
                                }
                        ]
                }
        ]
}
